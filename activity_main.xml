<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@android:color/black">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. What is 1 in Hawaiian?"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:hint="use ' as the 'okina"
            android:textSize="20sp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/q2_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q1"
        android:orientation="vertical"
        android:paddingBottom="12dp"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. What is 4 in Hawaiian?"
                android:textSize="20sp"
                android:paddingBottom="12dp"
                android:textColor="@android:color/black"/>

            <RadioButton
                android:id="@+id/q2_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a.  ehā"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/q2_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b. ʻehā"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/q2_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c. ʻeha"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/q2_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d. ʻēha"
                android:textSize="20sp"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/q2_radio"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="3. What is 10 in Hawaiian?"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:hint="use ' as the 'okina"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/q4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q2"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="@string/q4_text"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/q4_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a. ʻekolu"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/q4_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b. ʻeiwa"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/q4_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c. ʻeono"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/q4_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d. ʻelima"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/q4_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e. ʻekahi"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/q4_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f. ʻehiku"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/q4"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/answer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="submitAnswers"
                android:text="Submit"
                android:paddingTop="12dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
